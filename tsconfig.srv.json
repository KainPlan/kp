{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/env.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/pages/**/*",
    "**/components/**/*",
    "**/public/**/*"
  ]
}